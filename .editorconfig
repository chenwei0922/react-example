# https://editorconfig.org
# 表示是最顶层的EditorConfig配置文件
root = true

# 表示所有文件适用
[*]
# 设置文件字符集为utf-8
charset = utf-8
# 缩进风格
indent_style = space
# 缩进大小
indent_size = 2
# 控制换行类型
end_of_line = lf
# 始终在文件末尾插入一个新行
insert_final_newline = true
# 去除行首的任意空白字符
trim_trailing_whitespace = true

# 表示仅md文件适用一下规则
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
